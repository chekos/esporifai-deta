{% extends "base.html.jinja" %}{% block title %}{{ title }}{% endblock %}
{% block content %}
<main>
    <div class="styled-grid">
        <ul class="styled-grid">
            <div class="grid__item__inner">
                <div style="width: {{ track.album.images[1].width }}px">
                    <img src="{{ track.album.images[1].url }}" alt="{{ track.name }}" />
                </div>
                {% set mins = track.duration_ms // 60000 %}{% set secs = track.duration_ms % 60000 // 1000 %}
                <h2>{{ track.name }}</h2><small>{{ '%02d' % mins }}:{{ '%02d' % secs }}</small>
                <ul class="styled-grid">
                    <div class="grid__item__inner">
                        {% for artist in track.artists %}
                        <h4>{{ artist.name }}</h4>
                        {% endfor %}
                    </div>
                </ul>
                <div>
                    {{ track.album.name }}
                </div>
            </div>
    </div>
    </ul>
</main>
{% endblock %}